<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".LoginActivity"
    android:layout_margin="16dp">


    <EditText
        android:id="@+id/emailTxt_Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="76dp"
        android:hint="Email"
        android:inputType="textPersonName"
        android:shadowColor="@color/darkgrey"
        android:textColor="@color/Black"
        android:textColorHighlight="@color/darkgrey"
        android:textColorHint="@color/darkgrey"
        android:textColorLink="@color/darkgrey"
        app:backgroundTint="@color/darkgrey"/>

    <EditText
        android:id="@+id/passTxt_Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/emailTxt_Login"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textAllCaps="false"
        android:textColor="@color/Black"
        android:textColorHint="@color/darkgrey"
        app:backgroundTint="@color/darkgrey" />

    <Button
        android:id="@+id/signUpLoginBtn_Login"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="242dp"
        android:layout_height="43dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/signInBtn_Login"
        android:text="No account yet? Create one "
        android:textAllCaps="false"
        android:textColor="@color/darkgrey"
        android:textSize="14sp" />

    <Button
        android:id="@+id/signInBtn_Login"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="241dp"
        android:layout_height="50dp"
        android:layout_below="@+id/passTxt_Login"
        android:layout_alignEnd="@+id/emailTxt_Login"
        android:layout_marginTop="59dp"
        android:layout_marginEnd="-11dp"
        android:background="@color/colorAccent"
        android:text="Login"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textColorLink="@color/darkgrey"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        app:srcCompat="@drawable/roomies2" />


</RelativeLayout>

