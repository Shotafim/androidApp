<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".LoginActivity"
    android:layout_margin="16dp">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="162dp"
        android:layout_height="58dp"
        android:layout_marginBottom="72dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/roomies2" />

    <EditText
        android:id="@+id/usrNameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_below="@id/imageView2"
        android:ems="10"
        android:layout_centerHorizontal="true"
        android:hint="Email"
        android:inputType="textPersonName"
        android:shadowColor="@color/darkgrey"
        android:textColor="@color/Black"
        android:textColorHighlight="@color/darkgrey"
        android:textColorHint="@color/darkgrey"
        android:textColorLink="@color/darkgrey"
        app:backgroundTint="@color/darkgrey"/>
    <EditText
        android:id="@+id/passTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Password"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/usrNameTxt"
        android:inputType="textPassword"
        android:textAllCaps="false"
        android:textColor="@color/Black"
        android:textColorHint="@color/darkgrey"
        app:backgroundTint="@color/darkgrey" />

    <Button
        android:id="@+id/signInBtn"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="241dp"
        android:layout_height="50dp"
        android:background="@color/colorAccent"
        android:text="Login"
        android:textAllCaps="false"
        android:layout_below="@+id/passTxt"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:textColorLink="@color/darkgrey"
        android:textSize="18sp" />

    <Button
        android:id="@+id/signUpLoginBtn"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="242dp"
        android:layout_height="43dp"
        android:text="No account yet? Create one "
        android:layout_centerHorizontal="true"
        android:layout_below="@id/signInBtn"
        android:textAllCaps="false"
        android:textColor="@color/darkgrey"
        android:textSize="14sp" />



</RelativeLayout>